<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/webflow 
  http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">





  <view-state id="start" view="jsp/start.jsp" >
    <transition on="create" to="create"/>
    <transition on="login" to="log"/>
  </view-state>








  <subflow-state id="create" subflow="create">
    <transition on="true" to="successReg"/>
    <transition on="false" to="failReg"/>
  </subflow-state>


  <view-state id="failReg" view="jsp/create/failCreate.jsp">
    <transition on="toStart" to="start"/>
  </view-state>


  <view-state id="successReg" view="jsp/create/successCreate.jsp">
    <transition on="toStart" to="start"/>
  </view-state>











    <subflow-state id="log" subflow="login">
        <transition on="true" to="successLogin"/>
        <transition on="false" to="failLogin"/>
    </subflow-state>


  <view-state id="successLogin" view="jsp/login/successLogin.jsp">
    <transition on="toStart" to="start"/>
  </view-state>

  <view-state id="failLogin" view="jsp/login/failLogin.jsp"/>



  







</flow>