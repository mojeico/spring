<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">



    <var name="user" class="entities.Users"/>
    <var name="serviceUser" class="service.impl.ServiceUserImpl"/>



    <view-state id="loginIn" view="jsp/login/loginIn.jsp" model="user">
        <transition on="login" to="checkLogin"/>
    </view-state>


    <action-state id="checkLogin">
        <evaluate expression="serviceUser.checkUserPassword(user)"/>
        <transition on="true" to="true"/>
        <transition on="false" to="false"/>
    </action-state>




    <end-state id="true"/>
    <end-state id="false"/>

</flow>