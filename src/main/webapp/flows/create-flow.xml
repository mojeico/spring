<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">


    <var name="user" class="entities.Users"/>
    <var name="serviceUser" class="service.impl.ServiceUserImpl"/>
    <var name="dao" class="dao.impl.UserDaoImpl"/>





    <view-state id="create" view="jsp/create/createUser.jsp" model="user">
      <transition on="createUser" to="createUser"/>
    </view-state>



  <!--  <action-state id="createUser">
        <evaluate expression="dao.saveUser(user)"/>
        <transition on="true" to="true"/>
        <transition on="false" to="false"/>
    </action-state>
-->

    <action-state id="createUser">
        <evaluate expression="serviceUser.saveUser(user)"/>
        <transition on="true" to="true"/>
        <transition on="false" to="false"/>
    </action-state>




    <end-state id="true"/>
    <end-state id="false"/>


</flow>